# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/your_app_dev
DATABASE_TEST_URL=postgresql://user:password@localhost:5432/your_app_test
REDIS_URL=redis://localhost:6379

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_SALT_ROUNDS=12

# External Services - Development Keys
SENDGRID_API_KEY=SG.your-sendgrid-api-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret
OPENAI_API_KEY=sk-your-openai-api-key

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=your-app-uploads-dev
AWS_REGION=us-east-1

# API Configuration
API_BASE_URL=http://localhost:3000
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-url
LOG_LEVEL=info
LOG_FORMAT=json

# Development Settings
NODE_ENV=development
PORT=3000
HOST=localhost

# Email Settings
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key
FROM_EMAIL=noreply@yourapp.com
FROM_NAME=Your App Name

# OAuth Configuration (if using social login)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_SOCIAL_LOGIN=false

# Performance & Caching
CACHE_TTL=3600
MAX_FILE_SIZE=10485760
MAX_REQUEST_SIZE=52428800

# Testing
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/your_app_test
TEST_REDIS_URL=redis://localhost:6379/1